{
  "name": "retext-sentiment",
  "version": "2.0.2",
  "description": "Detect the sentiment of text with Retext",
  "license": "MIT",
  "keywords": [
    "natural",
    "language",
    "afinn",
    "sentiment",
    "subjective",
    "subjectivity",
    "polarity",
    "opinion",
    "emotion",
    "attitude",
    "sentiment",
    "detect",
    "guess",
    "retext"
  ],
  "files": [
    "index.json",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/colearnr/retext-sentiment.git"
  },
  "bugs": "https://github.com/colearnr/retext-sentiment/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
    "Prabhu Subramanian <prabhu@colearnr.com>"
  ],
  "dependencies": {
    "nlcst-to-string": "^2.0.0",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "afinn-111": "git://github.com/colearnr/afinn-111#1.0.1",
    "browserify": "^13.0.1",
    "emoji-emotion": "^0.1.1",
    "emoticon": "^1.0.0",
    "eslint": "^3.1.1",
    "esmangle": "^1.0.1",
    "gemoji": "^1.0.0",
    "istanbul": "^0.4.0",
    "jscs": "^3.0.0",
    "jscs-jsdoc": "^2.0.0",
    "remark-cli": "^1.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^5.0.0",
    "remark-lint": "^4.0.0",
    "remark-validate-links": "^4.0.0",
    "retext": "^3.0.0",
    "tape": "^4.0.0"
  },
  "scripts": {
    "build-list": "node script/build-list.js",
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s retextSentiment > retext-sentiment.js",
    "build-mangle": "esmangle retext-sentiment.js > retext-sentiment.min.js",
    "build": "npm run build-list && npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "test-api": "node test.js",
    "test-coverage": "istanbul cover test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  }
}
